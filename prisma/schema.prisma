generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING_WHATSAPP
  PENDING_PAYMENT
  PAID
  PAYMENT_FAILED
  CANCELLED
  PROCESSING
}

enum PaymentMethod {
  WHATSAPP
  EPOINT
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  priceAzn    Int
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id           String        @id @default(cuid())
  status       OrderStatus
  totalAzn     Int
  currency     String        @default("AZN")
  customerName String
  phone        String
  address      String
  note         String?
  paymentMethod PaymentMethod
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  items        OrderItem[]
}

model OrderItem {
  id            String   @id @default(cuid())
  orderId       String
  productId     String?
  titleSnapshot String
  unitPriceAzn  Int
  qty           Int
  lineTotalAzn  Int
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
}

model StoreSettings {
  id               Int      @id @default(1)
  enableWhatsApp   Boolean  @default(true)
  enableEpoint     Boolean  @default(false)
  whatsappNumber   String   @default("")
  whatsappTemplate String   @default("Salam! Yeni sifariş: #{{orderId}}\nAd: {{customerName}}\nTelefon: {{phone}}\nÜnvan: {{address}}\nMəhsullar:\n{{items}}\nCəmi: {{totalAzn}} AZN")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
